<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Biography</th>
      <th>Handle</th>
      <th>Email</th>
      <th>Rank</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member_avatar member, size: :small %></td>
        <td><%= member.biography %></td>
        <td><%= member.handle %></td>
        <td><%= member.email %></td>
        <td><%= member.rank %></td>
        <td><%= member.role %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>

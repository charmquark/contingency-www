<%- case assoc_type -%>
<%- when :game -%>
    <%= content_section 'index-game-members', title: "Members for #{@assoc.name}" do -%>
        <%= members_avatars @assoc.members %>
    <%- end -%>

    <%- content_for :user_actions do -%>
        <%= link_to_if is_admin?, "Add Member", new_game_game_membership_path(@assoc), class: 'button' %>
        <%= link_to "Back to Game", game_path(@assoc), class: 'button' %>
    <%- end -%>
<%- when :member -%>
    <%= content_section 'index-member-games', title: "Games for #{@assoc.handle}" do -%>
        <%= games_banners @assoc.games %>
    <%- end -%>

    <%- content_for :user_actions do -%>
        <%= link_to_if is_admin?, "Add Game", new_member_game_membership_path(@assoc), class: 'button' %>
        <%= link_to "Back to Member", member_path(@assoc), class: 'button' %>
    <%- end -%>
<%- end -%>
<%- content_for :title do -%>New Background | <%= @backgroundable.name %> | <%- end -%>

<%= form_section title: "New Background Image for #{@backgroundable.name}" do -%>
    <%= form_for(@background_image,
            html: {multipart: true},
            url: polymorphic_path([@backgroundable, BackgroundImage]),
            method: :post
        ) do |f|
    -%>
        <div class="halfs-medium">
            <div class="field backgroundable-info">
                <label><%= @backgroundable_type.model_name.human %></label>
                <%- case @backgroundable_type.model_name -%>
                <%- when 'Game' -%>
                    <%= game_banner @backgroundable %>
                <%- when 'Member' -%>
                    <%= member_avatar @backgroundable %>
                <%- end -%>
            </div>
            <div class="field">
                <%= f.label :image %>
                <%= f.file_field :image %>
            </div>
        </div>
        <%= user_actions do -%>
            <%= f.submit 'Save' %>
            <%= f.button 'Reset', type: :reset %>
            <%= link_to 'Cancel', polymorphic_path([@backgroundable, BackgroundImage]) %>
        <%- end -%>
    <%- end -%>
<%- end -%>
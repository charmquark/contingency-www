<%- content_for :title do -%>Backgrounds for <%= backgroundable_title %> | <%- end -%>
<%- content_for :body_class do -%>background_images-assoc-<%= backgroundable_type %><%- end -%>

<%= content_section 'background-images-index', title: "Background Images for #{backgroundable_title}" do -%>
    <ul>
        <%- @background_images.each do |bg| -%>
            <li>
                <%= image_tag bg.image.url -%>
                <%= icon_delete_link :white, '', poly_background_image_path(bg) %>
            </li>
        <%- end -%>
    </ul>
<%- end -%>

<%- content_for :user_actions do -%>
    <%- if is_admin? then -%>
        <%= icon_link_to :white, :plus, "New Background", new_poly_background_image_path, class: 'button' %>
    <%- end -%>
    <%= icon_link_to :white, 'keyboard-backspace', "Back to #{backgroundable_type.to_s.titleize}", backgroundable_path, class: 'button' %>
<%- end -%>
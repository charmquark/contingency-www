<%- content_for :title do -%>News | <%- end -%>

<%= content_section 'news-posts-index', class: 'limit-large', title: 'Recent News' do -%>
    <% cache NewsPost.cache_key_for_all do %>
        <%- @news_posts.each do |post| -%>
            <%= render partial: 'news_posts/embed', locals: {news_post: post} -%>
        <%- end -%>
    <% end %>
    <%= user_actions is_admin? do -%>
        <%= icon_link_to :white, :plus, 'Add New Post', new_news_post_path, class: 'button' %>
    <% end %>
<%- end -%>


<%= content_row :medium, :halfs do -%>
    <%= content_section 'member-info', title: @member.handle do -%>
        <%= member_avatar_img @member -%>
    <%- end -%>
    
    <%= content_section 'member-links', title: 'Related Links' do -%>
    <%- end -%>
<%- end -%>

<%= content_row :large, :halfs do -%>
    <%= content_section 'member-related-games', title: 'Games' do -%>
    <%- end -%>
    
    <%= content_section 'member-related-media', title: 'Media' do -%>
    <%- end -%>
<%- end -%>

<% content_for :user_actions do %>
    <%- admin_or @member do -%>
        <%= link_to 'Edit Member', edit_member_path(@member), class: 'button' -%>
        <%= link_to 'Backgrounds', member_background_images_path(@member), class: 'button' -%>
    <%- end -%>
<% end %>

<%- content_for :title do -%>Members | <%- end -%>

<%= content_section 'members-index', class: 'limit-large', title: 'Our Members' do -%>
    <%= render partial: 'members/list', locals: {members: @members, show_delete: is_admin?, show_twitch_indicator: true} %>
<%- end -%>

<% content_for :user_actions do %>
    <%- if is_admin? then -%>
        <%= icon_link_to :white, 'account-plus', 'New Member', new_member_path, class: 'button' -%>
    <%- end -%>
<% end %>

<%- content_for :title do -%>Members | <%- end -%>

<%= content_section 'members-index', class: 'limit-large', title: 'Our Members' do -%>
    <%= render partial: 'members/list', locals: {
        members: @members,
        show_twitch_indicator: true
    } %>
    <%= user_actions is_admin? do -%>
        <%= icon_link_to :white, 'account-plus', 'Add New Member', new_member_path, class: 'button' -%>
    <%- end -%>
<%- end -%>

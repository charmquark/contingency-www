<%- show_twitch_indicator ||= false -%>
<%- see_all ||= false -%>
<ul class="of_members packed">
    <%- members.each do |member| -%>
        <li>
            <%= member_twitch_indicator member if show_twitch_indicator %>
            <%= member_avatar member -%>
        </li>
    <%- end -%>
    
    <%- if see_all then -%>
        <li class="see-all"><%= link_to 'All Members', members_path %></li>
    <%- end -%>
</ul>

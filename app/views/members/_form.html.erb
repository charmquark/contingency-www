<%= form_for(@member) do |f| %>
    <% if @member.errors.any? %>
        <div id="error_explanation">
            <h3><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h3>
            <ul>
                <% @member.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar %>
    </div>
    <div class="field">
        <%= f.label :biography %><br>
        <%= f.text_area :biography %>
    </div>
    <div class="field">
        <%= f.label :handle %><br>
        <%= f.text_field :handle %>
    </div>
    <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="field">
        <%= f.label :rank %><br>
        <% ContingencyRanks::RANKS.each do |rank| %>
            <%= f.radio_button :rank, rank.symbol %><%= rank.name %>
        <% end %>
    </div>
    <div class="field">
        <%= f.label :role %><br>
        <% ContingencyRoles::ROLES.each do |role| %>
            <%= f.radio_button :role, role.symbol %><%= role.name %>
        <% end %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>

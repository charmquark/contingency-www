<%- title "Edit #{@external_link.site_name} Link", @member.handle -%>

<%= form_section title: "Edit #{@external_link.site_name} Link for #{@member.handle}" do -%>
    <%= form_for(@external_link,
            url: member_external_link_path(@member, @external_link),
            method: :patch
        ) do |f|
    -%>
        <div class="field">
            <%= f.label :site %>
            <%= external_link_icon @external_link %>
            <%= @external_link.site_name %>
        </div>

        <%= form_field_basic f, :text_field, @external_link, :fragment, required: '' %>

        <%= form_actions f, member_external_links_path(@member) %>
    <%- end -%>
<%- end -%>

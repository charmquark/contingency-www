<%= form_for(@game, html: {multipart: true}) do |f| -%>
    <%- if @game.errors.any? -%>
        <div id="error_explanation">
            <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

            <ul>
            <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <%- end -%>

    <div class="halfs-medium">
        <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, data: {focus: ''} %>
        </div>
        <div class="field">
            <%= f.label :slug %>
            <%= f.text_field :slug %>
        </div>
    </div>
    <div class="field">
        <label>Attributes</label>
        <div class="check-group singleton">
            <div>
                <%= f.check_box :featured %>
                <%= f.label :featured %>
            </div>
        </div>
    </div>
    <div class="halfs-medium hide-small">
        <div class="field">
            <%= f.label :banner %>
            <%= f.file_field :banner %>
        </div>
        <div class="field">
            <%- unless @game.banner.url.empty? then -%>
                <label>Current Banner</label>
                <div class="game-banner">
                    <%= game_banner_img @game %>
                </div>
            <%- end -%>
        </div>
    </div>
    <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'long' %>
    </div>
    <%= user_actions do -%>
        <%= f.submit class: 'button' %>
        <%= f.button 'Reset', class: 'button', type: :reset %>
        <%= link_to 'Cancel', (action_name == 'edit' ? game_path(@game) : games_path), class: 'button' %>
    <%- end -%>
<%- end -%>
<%= content_row :large, :halfs do -%>
    <%= content_section 'game-info', title: @game.name do -%>
        <div class="game-banner"> <%= game_banner_img @game -%></div>
    <%- end -%>
    
    <%= content_section 'game-related-news', title: 'Related News' do -%>
        <%- unless @news_post.nil? then -%>
            <%= render partial: 'news_posts/embed', locals: {news_post: @news_post} -%>
        <%- end -%>
    <%- end -%>
<%- end -%>

<%= content_row :large, :halfs do -%>
    <%= content_section 'game-related-members', title: 'Players' do -%>
        <%= members_avatars @game.members %>
    <%- end -%>
    
    <%= content_section 'game-related-media', title: 'Media' do -%>
    <%- end -%>
<%- end -%>

<%= content_for :user_actions do -%>
    <%- admin_only do -%>
        <%= link_to 'Edit Game', edit_game_path(@game), class: 'button' %>
        <%= link_to 'Backgrounds', game_background_images_path(@game), class: 'button' -%>
        <%= link_to 'Members', game_game_memberships_path(@game), class: 'button' %>
    <%- end -%>
<%- end -%>